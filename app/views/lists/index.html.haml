%p#notice= notice
%h1 Listing Lits

%table
  %thead
    %tr
      %th Title
      %th Description
      %th{:colspan => "3"}
  %tbody
    %div{:class => "container"}
      - @lists.each do |list|
        %tr
          %td= list.title
          %td= list.description
          %td= link_to 'Show', list
          %td= link_to 'Edit', edit_list_path(list)
          %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New List', new_list_path



