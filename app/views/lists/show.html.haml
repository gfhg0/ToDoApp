.container
	.col-md-12
		.panel.panel-default
			.panel-heading
				= link_to ' ', edit_list_path(@list), class: 'fa fa-pencil'
				%h2.title= @list.title
				.title= @list.description
			.panel-body
				.item
					= render @list.items
		.task-add
			= render 'items/form'




